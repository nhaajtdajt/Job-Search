# ===========================================
# Job Search Backend - Environment Variables
# ===========================================
# Copy file này thành .env và điền các giá trị

# -------------------------------------------
# Server Configuration
# -------------------------------------------
NODE_ENV=development
PORT=8017
HOSTNAME=localhost

# -------------------------------------------
# Database (PostgreSQL/Supabase)
# -------------------------------------------
# Format: postgresql://username:password@host:port/database
DATABASE_URL=

# -------------------------------------------
# Database (PostgreSQL/Supabase)
# -------------------------------------------
# Format: postgresql://username:password@host:port/database
DATABASE_URL=

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# Secret key để sign JWT tokens (thay đổi trong production!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
# Thời gian hết hạn token (ví dụ: 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# -------------------------------------------
# Supabase
# -------------------------------------------
# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co
# Supabase anon/public key
SUPABASE_KEY=your-anon-key
# Service role key cho admin operations và storage
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# File Storage (Supabase Storage)
# -------------------------------------------
# Bucket name trong Supabase Storage
SUPABASE_STORAGE_BUCKET=job-search-storage

# File size limits (in bytes)
# 5MB for images
MAX_FILE_SIZE_IMAGE=5242880
# 10MB for PDFs
MAX_FILE_SIZE_PDF=10485760

