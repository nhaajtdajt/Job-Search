{
	"info": {
		"_postman_id": "job-search-api-2025",
		"name": "Job Search API",
		"description": "Complete API collection for Job Search Platform - viec24h\n\nIncludes all job management endpoints with authentication examples.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Jobs - Public",
			"item": [
				{
					"name": "Get All Jobs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/jobs?page=1&limit=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs"
							],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page"
								},
								{
									"key": "job_type",
									"value": "full-time",
									"description": "Filter by job type",
									"disabled": true
								},
								{
									"key": "employer_id",
									"value": "1",
									"description": "Filter by employer ID",
									"disabled": true
								}
							]
						},
						"description": "Get paginated list of jobs with optional filters"
					},
					"response": []
				},
				{
					"name": "Get Job by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/jobs/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1"
							]
						},
						"description": "Get detailed information about a specific job including employer and company info"
					},
					"response": []
				},
				{
					"name": "Increment Job Views",
					"request": {
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/jobs/1/views",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1",
								"views"
							]
						},
						"description": "Increment view counter when user views a job (no authentication required)"
					},
					"response": []
				}
			],
			"description": "Public endpoints that don't require authentication"
		},
		{
			"name": "Jobs - Employer",
			"item": [
				{
					"name": "Create Job",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"description": "JWT token for employer authentication"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"job_title\": \"Senior Frontend Developer\",\n  \"description\": \"We are looking for an experienced Frontend Developer to join our team. You will work on building modern web applications using React and TypeScript.\",\n  \"requirements\": \"- 3+ years of experience with React\\n- Strong knowledge of JavaScript/TypeScript\\n- Experience with state management (Redux, Zustand)\\n- Good understanding of HTML/CSS\\n- Experience with RESTful APIs\",\n  \"benefits\": \"- Competitive salary\\n- Health insurance\\n- Flexible working hours\\n- Remote work options\\n- Professional development opportunities\",\n  \"salary_min\": 20000000,\n  \"salary_max\": 35000000,\n  \"job_type\": \"full-time\",\n  \"tag_ids\": [1, 2, 3],\n  \"location_ids\": [1],\n  \"skill_ids\": [\"SK001\", \"SK002\", \"SK003\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/jobs",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs"
							]
						},
						"description": "Create a new job posting (employer only)\n\nRequired fields:\n- job_title\n- job_type\n\nOptional fields:\n- description, requirements, benefits\n- salary_min, salary_max\n- expired_at (auto-calculated if not provided)\n- tag_ids, location_ids, skill_ids"
					},
					"response": []
				},
				{
					"name": "Update Job",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"job_title\": \"Senior Frontend Developer (Updated)\",\n  \"description\": \"Updated job description...\",\n  \"salary_min\": 25000000,\n  \"salary_max\": 40000000,\n  \"tag_ids\": [1, 3, 5],\n  \"location_ids\": [1, 2]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/jobs/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1"
							]
						},
						"description": "Update an existing job posting\n\nOnly job owner can update.\nRelations (tags, locations, skills) are completely replaced if provided."
					},
					"response": []
				},
				{
					"name": "Delete Job",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/jobs/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1"
							]
						},
						"description": "Delete a job posting\n\nOnly job owner can delete.\nThis is a hard delete - job and all relations are removed."
					},
					"response": []
				},
				{
					"name": "Publish Job",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/jobs/1/publish",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1",
								"publish"
							]
						},
						"description": "Publish a job by updating posted_at to current time\n\nUseful if job was created as draft."
					},
					"response": []
				},
				{
					"name": "Expire/Close Job",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/jobs/1/expire",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"jobs",
								"1",
								"expire"
							]
						},
						"description": "Close recruitment by setting expired_at to current time"
					},
					"response": []
				}
			],
			"description": "Protected endpoints that require employer authentication",
			"auth": {
				"type": "bearer",
				"bearer": [
					{
						"key": "token",
						"value": "{{jwt_token}}",
						"type": "string"
					}
				]
			}
		},
		{
			"name": "Server Health",
			"item": [
				{
					"name": "Server Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								""
							]
						},
						"description": "Check server status and available endpoints"
					},
					"response": []
				}
			]
		}
	],
